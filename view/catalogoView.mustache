{{>header}}
{{>nav}}
        <!-- Header-->
        <header class="bg-dark py-5">
            <div class="container px-4 px-lg-5 my-5 bg-dark">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">Infonete</h1>

                    {{#weatherData}}
                    <p class="lead fw-normal text-white-50 mb-0">
                        {{weatherData.location}} - {{weatherData.temp}}°C - {{weatherData.clima}}
                    </p>
                    {{/weatherData}}

                </div>
            </div>
        </header>
        <!-- Section-->
        <section>

            <div class="mt-2">
                <div class="center w-100 d-flex justify-content-around flex-wrap">
                    <a class="btn btn-dark
                                col-12 col-lg-5 p-3
                                fs-5 fw-normal
                                d-flex align-items-center justify-content-center"
                       href="/inicio/listarDiarios"><i class="fa-solid fa-newspaper me-3"></i>DIARIOS</a>

                    <a class="btn btn-dark
                                col-12 col-lg-5   p-3 mt-2 mt-lg-0
                                fs-5 fw-normal
                                d-flex align-items-center justify-content-center"
                       href="/inicio/listarRevistas"><i class="fa-solid fa-newspaper me-3"></i>REVISTAS</a>
                </div>
            </div>

            {{#mensajeSuscripto}}
                <div class="alert bg-success alert-dismissible fade show mt-3 w-50 mx-auto" role="alert">
                    <h2 class="fs-4 text-white text-center">{{mensajeSuscripto}}</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {{/mensajeSuscripto}}

            {{#mensajeYaSuscripto}}
                <div class="alert bg-warning alert-dismissible fade show mt-3 w-50 mx-auto" role="alert">
                    <h2 class="fs-4 text-white text-center">{{mensajeYaSuscripto}}</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {{/mensajeYaSuscripto}}

            {{#mensajeCompra}}
                <div class="alert bg-success alert-dismissible fade show mt-3 w-50 mx-auto" role="alert">
                    <h2 class="fs-4 text-white text-center">{{mensajeCompra}}</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {{/mensajeCompra}}

            {{#edicionYaComprada}}
                <div class="alert bg-warning alert-dismissible fade show mt-3 w-50 mx-auto" role="alert">
                    <h2 class="fs-4 text-white text-center">{{edicionYaComprada}}</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {{/edicionYaComprada}}

            {{#mensajeErrorSuscripcion}}
                <div class="alert bg-danger alert-dismissible fade show mt-3 w-50 mx-auto" role="alert">
                    <h2 class="fs-4 text-white text-center">{{mensajeErrorSuscripcion}}</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {{/mensajeErrorSuscripcion}}

            {{#mensajeErrorCompra}}
                <div class="alert bg-danger alert-dismissible fade show mt-3 w-50 mx-auto" role="alert">
                    <h2 class="fs-4 text-white text-center">{{mensajeErrorCompra}}</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {{/mensajeErrorCompra}}


        </section>
        <!-- Section-->
        <section class="py-5">


        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-1 row-cols-md-3 row-cols-xl-4 justify-content-center">
                {{#producto}}
                    <div class="col mb-5">
                        <div class="card h-100 shadow">
                            <!-- Product image-->
                            <div class="d-flex align-items-center justify-content-center h-100">
                                <img class="card-img-top p-4" src="/public/img/portadasDeProducto/{{portada}}" alt="..." />

                            </div>
                            <!-- Product details-->
                            <div class="card-body p-4 d-flex align-items-end align-self-center">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">{{nombre}}</h5>
                                    <!-- Product price
                                    $40.00 - $80.00-->
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                    <a class="btn btn-outline-dark mt-auto" href="/producto/vistaPreviaProducto/idProducto={{idProducto}}">
                                        Ver más
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/producto}}
            </div>
        </div>


        </section>
        {{>footer}}
