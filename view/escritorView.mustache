    function toggleIfrm(id) {
        /*obtengo todos los elementos de clase formsDeAcciones
            pongo todos visibility hidden
            muestro el que tenga el ID
        * */
        let formsDeAcciones = document.getElementsByClassName('formsDeAcciones')
        for (const formAccion of formsDeAcciones) {
            formAccion.style.display="none";
        }
        document.getElementById(id).style.display = "block";

    }
</script>

