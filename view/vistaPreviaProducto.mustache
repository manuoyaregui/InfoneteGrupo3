{{>header}}
{{>nav}}

        <!-- Product section-->
        <section class="py-5 ">
            <div class="container px-4 px-lg-5 my-5 ">
                <div class="row gx-4 gx-lg-5 align-items-center">
                    <div class="col-md-6">
                        <img class="card-img-top mb-5 mb-md-0" src="/public/img/portadasDeProducto/{{productoVP.portada}}" alt="..." />
                    </div>
                    <div class="col-md-6">
                        <div class="small mb-1">{{productoVP.tipoProducto}}</div>
                        <h1 class="display-5 fw-bolder">{{productoVP.nombre}}</h1>
                        <div class="fs-5 mb-5">
                            <h5 class="text-muted">Precio por suscripcion</h5>
                            <span class="fw-bold text-success">${{productoVP.precioSuscripcion}}</span>
                        </div>
                        <div>
                            {{#isSuscribed}}
                                <a class="btn btn-success disabled text-white" href="#">

                                    <i class="fa-solid fa-check me-2"></i>
                                    Ya estás suscripto a este producto
                                </a>
                            {{/isSuscribed}}
                            {{^isSuscribed}}
                            <a class="btn btn-info text-white" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                                <i class="fa-solid fa-cart-shopping"></i>
                                Suscribirse
                            </a>
                            {{/isSuscribed}}
                        </div>
                        <div class="collapse" id="collapseExample">
                            <div class="card card-body">

                                <h4 class="text-muted mb-3">
                                    Total a abonar: <span class="badge bg-success">${{productoVP.precioSuscripcion}}</span>
                                </h4>

                                <form action="/usuario/suscribirseAProducto/idProducto={{productoVP.idProducto}}" method="post">

                                <select class="form-select" name="metodoDePago">
                                    <option disabled selected>Metodo de pago</option>
                                    {{#metodosDePago}}
                                        <option value="{{idMedioDePago}}">{{metodoDePago}}</option>
                                    {{/metodosDePago}}
                                </select>

                                <input type="submit" class="btn btn-info text-white float-end mt-3" value="Abonar">
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Related items section-->
        <section class="py-5 bg-light">
            <div class="container px-4 px-lg-5 mt-5">
                <h2 class="fw-bolder my-5 text-center">Ediciones Disponibles</h2>

                <div
                        id="seccion_ediciones"
                        class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    {{#edicionesDisponibles}}
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <img class="card-img-top" src="/public/img/portadasDeEdicion/{{portadaEdicion}}" alt="..." />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">Edicion N°{{numero}}</h5>
                                    <!--Fecha de la edicion-->
                                    <h6>{{fechaEdicion}}</h6>
                                    <!-- Product price-->
                                    <p class="fw-bold text-success">${{precio}}</p>
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent mx-auto">
                                <div>

                                    <div>
                                        <a class="btn btn-outline-dark" href="/edicion/listarArticulos/idProducto={{idProducto}}&idEdicion={{idEdicion}}">
                                            <i class="fa-solid fa-circle-info me-2"></i>Articulos
                                        </a>
                                        <a class="btn btn-success text-white" data-bs-toggle="collapse" href="#collapse-{{idEdicion}}" role="button" aria-expanded="false" aria-controls="collapse-{{idEdicion}}">
                                            <i class="fa-solid fa-cart-shopping me-2"></i>Comprar
                                        </a>
                                    </div>

                                    <div class="collapse" id="collapse-{{idEdicion}}">
                                        <div class="card card-body">

                                            <h4 class="text-muted mb-3">
                                                Total a abonar: <span class="badge bg-success">${{precio}}</span>
                                            </h4>

                                            <form action="/usuario/comprarEdicion/idEdicion={{idEdicion}}" method="post">

                                            <select class="form-select" name="metodoDePago">
                                                <option disabled selected>Metodo de pago</option>
                                                {{#metodosDePago}}
                                                    <option value="{{idMedioDePago}}">{{metodoDePago}}</option>
                                                {{/metodosDePago}}
                                            </select>

                                            <input type="submit" class="btn btn-info text-white float-end mt-3" value="Abonar">
                                            </form>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/edicionesDisponibles}}
                </div>
            </div>
        </section>
        <!-- Footer-->
        <footer class="py-5 bg-dark">
            <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Your Website 2022</p></div>
        </footer>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    </body>
</html>